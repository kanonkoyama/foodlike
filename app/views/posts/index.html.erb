<div class="posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-user">
          <div class="img">
            <%= image_tag post.user.image.thumb.url %>
          </div>  
          <div class="name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
        </div>
        <br>
        <br>
        <div class="post-img">
          <%= image_tag post.post_image.small_thumb.url %>
        </div>
        <div class="post-content">
          <%= link_to(simple_format(post.content), "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>