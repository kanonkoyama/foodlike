<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.image.thumb.url %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
    
    <ul class="user-tabs">
      <li class="indexbtn"><%= link_to("foodレポ", "/users/#{@user.id}") %></li>
      <li class="favbtn"><%= link_to("お気に入り", "/users/#{@user.id}/like") %></li>
    </ul>
    
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
      <div class="post-user">
        <div class="img">
          <%= image_tag post.user.image.thumb.url %>
        </div>  
        <div class="name">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
        </div>
      </div>
        <div class="post-user-left">
        </div>
        <div class="post-user-right">
          <div class="post-user-name">

          </div>
        </div>  
        <div class="post-img">
          <%= image_tag post.post_image.thumb.url %>
        </div>
        <div class="post-content">
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>