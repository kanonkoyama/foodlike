<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.image.thumb.url %>
      <h2><%= @user.name %></h2>
      <% if user_signed_in? && @user.id == current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
    <ul class="user-tabs">
      <li class="dark-button"><%= link_to("foodレポ", "/users/#{@user.id}") %></li>
      <li class="light-button"><%= link_to("お気に入り", "/users/#{@user.id}/like") %></li>
    </ul>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-user">
          <div class="img">
            <%= image_tag post.user.image.thumb.url %>
          </div>  
          <div class="name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
        </div>
        <br>
        <br>
        <div class="post-img">
          <%= image_tag post.post_image.small_thumb.url %>
        </div>
        <div class="post-content">
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>